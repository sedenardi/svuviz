 <script id="commonModal-template" type="text/x-handlebars-template">
  <div class="row commonHeader">
    <div class="col-xs-4">
      <h4>
      {{{actorLink actorId1 actorName1}}}
      </h4>
    </div>
    <div class="col-xs-4">
      <h4>
        Title
      </h4>
    </div>
    <div class="col-xs-4">
      <h4>
      {{{actorLink actorId2 actorName2}}}
      </h4>
    </div>
  </div>
  {{#if processed.tv.length}}
  <h4>TV Shows</h4>
  {{#each processed.tv}}
    {{>commonRow this}}
  {{/each}}
  {{/if}}
  {{#if processed.movies.length}}
  <h4>Movies</h4>
  {{#each processed.movies}}
    {{>commonRow this}}
  {{/each}}
  {{/if}}
</script>

<script id="commonRow-partial" type="text/x-handlebars-template">
  <div class="row alternateRow">
    <div class="col-xs-4">
    {{{characterLink CharacterID1 Character1}}}
    </div>
    <div class="col-xs-4">
    {{{titleLink TitleID Title}}}
    {{episodes this}}
    </div>
    <div class="col-xs-4">
    {{{characterLink CharacterID2 Character2}}}
    </div>
  </div>
</script>

<script id="actorModal-template" type="text/x-handlebars-template">
  {{#if processed.tv.length}}
  <h4>TV Shows</h4>
  {{#each processed.tv}}
    {{>actorRow this}}
  {{/each}}
  {{/if}}
  {{#if processed.movies.length}}
  <h4>Movies</h4>
  {{#each processed.movies}}
    {{>actorRow this}}
  {{/each}}
  {{/if}}
</script>

<script id="actorRow-partial" type="text/x-handlebars-template">
  <div class="row alternateRow">
    <div class="col-xs-6">
    {{{characterLink CharacterID Character}}}
    </div>
    <div class="col-xs-6">
    {{{titleLink TitleID Title}}}
    {{episodes this}}
    </div>
  </div>
</script>